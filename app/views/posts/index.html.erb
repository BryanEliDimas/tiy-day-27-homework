<br>
<div class="row">
  <div class="col-md-12">
    <% @posts.each do |post| %>
      <div class="col-xs-12 col-md-4">
        <%= image_tag post.photo.url(:large), class: "img-responsive img-thumbnail" %>
        <span style="color: white"><%= post.title %></span>
        <br>
        <span style="color: skyblue;"><%= post.tag_list.join(", ") %></span>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @posts %>
